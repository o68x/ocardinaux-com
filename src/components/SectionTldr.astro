---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<div class:list={[className, "tldr"]}>
  <slot />
</div>

<style>
  .tldr {
    padding: var(--s-1);
    font-size: var(--s-1);

    & :global(h2) {
      text-shadow: var(--text-shadow-high);
    }
  }
</style>

<style is:global>
  /* for the uppercase intro text on construction */
  .tldr strong {
    font-size: var(--s-2);
    letter-spacing: 0.3em;
  }
</style>
