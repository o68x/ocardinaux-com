---
interface Props {
  title: string;
}

const { title } = Astro.props;
---
<article class="content">
  <h2>{title}</h2>
  <div>
    <slot />
  </div>
</article>

<style>
  article {
    color: var(--color-fern);
    background-color: #fefefe;
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: center;
    align-items: first baseline;
    max-width: min(80ch, calc(100% - 2rem));
    margin-inline: auto;
    padding: 2rem;
    border-radius: 2px;
    font-size: var(--s2);
    box-shadow:
      inset 2px 2px 4px 0px rgba(21, 20, 15, 0.2);

    & > * {
      flex-grow: 1;
      flex-basis: calc((30rem - 100%) * 999);
      max-width: max(400px, 33vw);
      text-wrap: balance;
    }
  }

  h2 {
    display: block;
    font-size: var(--s4);
    font-weight: 400;
    line-height: 0.9;
    letter-spacing: 0;
  }
</style>