---
interface Props {
  title: string;
  class?: string;
}

const { title, class: className } = Astro.props;
---

<article class:list={[className, "content"]}>
  <div class="inner">
    <div class="title-block">
      <h2>{title}</h2>
      <slot name="subtitle" />
    </div>
    <div>
      <slot />
    </div>
  </div>
</article>

<style>
  article {
    color: var(--color-fern);
    font-size: var(--s1);
    line-height: 1.3;

    .inner {
      display: flex;
      flex-wrap: wrap;
      gap: var(--s0);
      justify-content: center;
      align-items: first baseline;
      padding: 1rem;
      background-color: var(--color-light-bone);
      transform: translate(5px, 5px);

      & > * {
        flex-grow: 1;
        flex-basis: calc((30rem - 100%) * 999);
        max-width: max(400px, 33vw);
        text-wrap: balance;
      }
    }
  }

  .title-block {
      font-size: var(--s-1);
  }
</style>
