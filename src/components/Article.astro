---

interface Props {
  title: string;
  class?: string;
}

const { title, class: className } = Astro.props;
---

<article class:list={[className, "content"]}>
  <div class="inner">
    <h2>{title}</h2>
    <div>
      <slot />
    </div>
  </div>
</article>

<style>
  article {
    color: var(--color-light-fern);
    font-size: var(--s2);

    .inner {
      display: flex;
      gap: 1rem;
      flex-wrap: wrap;
      justify-content: center;
      align-items: first baseline;
      padding: 1rem;
      background-color: var(--color-light-bone);
      opacity: 0.8;

      & > * {
        flex-grow: 1;
        flex-basis: calc((30rem - 100%) * 999);
        max-width: max(400px, 33vw);
        text-wrap: balance;
      }
    }

  }

  h2 {
    display: block;
    font-size: var(--s4);
    font-weight: 400;
    line-height: 0.9;
    letter-spacing: 0;
  }
</style>
